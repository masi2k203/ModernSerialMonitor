<Page
    x:Class="ModernSerialMonitor.Views.Pages.MonitorPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModernSerialMonitor.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:ModernSerialMonitor.ViewModels"
    Title="MonitorPageView"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.DataContext>
        <vm:MonitorPageViewModel />
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" MaxWidth="250" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,100,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  ポート設定  -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <Label Content="シリアルポート設定" Style="{StaticResource UnifiedHeaderStyle}" />
                <WrapPanel>
                    <StackPanel>
                        <Label Content="ポート" Style="{StaticResource UnifiedSubHeaderStyle}" />
                        <ComboBox
                            Width="100"
                            Margin="5,0,15,10"
                            ItemsSource="{Binding COMDeviceNameList}" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="ボーレート" Style="{StaticResource UnifiedSubHeaderStyle}" />
                        <ComboBox Width="100" Margin="5,0,10,10" />
                    </StackPanel>
                    <StackPanel>
                        <Label Content="データ末尾" Style="{StaticResource UnifiedSubHeaderStyle}" />
                        <ComboBox Width="100" Margin="5,0,10,10" />
                    </StackPanel>
                </WrapPanel>

                <Label Content="未接続" Style="{StaticResource UnifiedSubHeaderStyle}" />
                <StackPanel Orientation="Horizontal">
                    <Button
                        Width="80"
                        Margin="5,10,0,10"
                        Content="接続" />
                    <Button
                        Width="80"
                        Margin="5,10,0,10"
                        Content="切断" />
                </StackPanel>
            </StackPanel>

            <!--  送信設定  -->
            <StackPanel Grid.Row="1" Margin="0,0,0,30">
                <Label Content="送信" Style="{StaticResource UnifiedHeaderStyle}" />
                <Label Content="送信するデータ" Style="{StaticResource UnifiedSubHeaderStyle}" />
                <TextBox Margin="5,10,0,10" />
                <Button
                    Width="80"
                    Margin="5,10,0,10"
                    Content="送信" />
            </StackPanel>

            <!--  受信設定  -->
            <DockPanel Grid.Row="2" LastChildFill="True">
                <StackPanel DockPanel.Dock="Top">
                    <Label Content="受信" Style="{StaticResource UnifiedHeaderStyle}" />
                    <Label Content="受信したデータ" Style="{StaticResource UnifiedSubHeaderStyle}" />
                </StackPanel>
                <Grid DockPanel.Dock="Bottom">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBox
                        Grid.Row="0"
                        Margin="5,10,0,10"
                        IsReadOnly="True" />
                    <Button
                        Grid.Row="1"
                        Width="80"
                        Margin="5,10,0,10"
                        Content="履歴消去" />
                </Grid>
            </DockPanel>
        </Grid>

        <StackPanel Grid.Column="1">
            <Label Content="ヘルプ" Style="{StaticResource UnifiedHelpHeaderStyle}" />
            <TextBlock Style="{StaticResource UnifiedHelpTextStyle}" Text="ヘルプヘルプヘルプいろいろ..." />
        </StackPanel>
    </Grid>
</Page>
